{
  "name": "@aku11i/phantom-monorepo",
  "version": "3.0.0",
  "packageManager": "pnpm@10.8.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:shell": "pnpm --filter @aku11i/phantom-cli run test:shell",
    "test:shell:bash": "pnpm --filter @aku11i/phantom-cli run test:shell:bash",
    "test:shell:fish": "pnpm --filter @aku11i/phantom-cli run test:shell:fish",
    "test:shell:zsh": "pnpm --filter @aku11i/phantom-cli run test:shell:zsh",
    "lint": "biome check .",
    "fix": "biome check --write .",
    "typecheck": "pnpm -r typecheck",
    "ready": "pnpm fix && pnpm typecheck && pnpm test",
    "ready:check": "pnpm lint && pnpm typecheck && pnpm test",
    "phantom": "pnpm --filter @aku11i/phantom-cli run phantom"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^24.9.1",
    "@typescript/native-preview": "7.0.0-dev.20251120.1",
    "esbuild": "^0.27.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "zod": "^3.25.64"
  }
}
