{
  "name": "@aku11i/phantom",
  "packageManager": "pnpm@10.8.1",
  "version": "0.1.0",
  "description": "A CLI tool for managing Git worktrees (ruins) with enhanced functionality",
  "keywords": ["git", "worktree", "cli", "phantom", "ruins", "workspace", "development"],
  "homepage": "https://github.com/aku11i/phantom#readme",
  "bugs": {
    "url": "https://github.com/aku11i/phantom/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aku11i/phantom.git"
  },
  "license": "MIT",
  "author": "aku11i",
  "type": "module",
  "bin": {
    "phantom": "./src/bin/phantom.ts",
    "ruins": "./src/bin/ruins.ts"
  },
  "scripts": {
    "start": "node ./src/bin/phantom.ts",
    "phantom": "node ./src/bin/phantom.ts",
    "ruins": "node ./src/bin/ruins.ts",
    "type-check": "tsc --noEmit",
    "test": "node --test --experimental-test-module-mocks src/**/*.test.ts",
    "lint": "biome check .",
    "fix": "biome check --write .",
    "ready": "pnpm fix && pnpm type-check && pnpm test",
    "ready:check": "pnpm lint && pnpm type-check && pnpm test",
    "prepublishOnly": "pnpm ready:check"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.15.29",
    "typescript": "^5.8.3"
  }
}
